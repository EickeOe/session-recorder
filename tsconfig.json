{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "declaration": true,
    "noImplicitAny": false,
    "noLib": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["dom", "es2017"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "models": ["./models"],
      "models/*": ["./models/*"],

      "observers": ["./observers"],
      "observers/*": ["./observers/*"],

      "tools": ["./tools"],
      "tools/*": ["./tools/*"]
    }
  },
  "include": ["src/**/*", "src/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
